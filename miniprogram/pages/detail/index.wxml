<!--index.wxml-->
<view class="container">  
    <view class="title">{{title}}</view>
    <view class="previewimg">  
        <image src="{{cover}}" data-src="{{cover}}" bindtap="previewImage"></image>  
    </view>
    <view class="content">
      {{content}}
    </view>
    <view slot="footer">
    <van-button size="mini" data-id="{{id}}" bind:click="update">修改</van-button>
    <van-button size="mini" data-id="{{id}}" bind:click="delete">删除</van-button>
    </view>
</view>
